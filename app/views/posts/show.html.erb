<% @page_title = @post.title %>

<h1><%= @page_title %></h1>

<% if current_member %>
  <div class ="toolbar">
    <%= link_to "編集", edit_post_path %>|
    <%= link_to "削除", post_path, method: :delete,
        data: {confirm: "本当に削除しますか？"} %>
  </div>
<% end %>

  <section class="single-post">

    <section class="post-box">
      <h3 class="post-box-heading">
        <%= @post.title %>      </h3>
      <div class="post-box-content">
        <p class="post-date">
          <%= @post.created_at %>
        </p>
      </div>
      <%= image_tag "img/forest.jpg", class:"single-image" %>
      <p class="single-text">
        <%= @post.body %>      
      </p>
      <div class="author-case">