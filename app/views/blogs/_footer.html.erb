<ul class ="entry-footer">
  <% if current_member %>
    <% if current_member.id == @blog.member_id %>
      <%= menu_link_to "編集", edit_blog_path(@blog.id) %>
      <%= menu_link_to "削除", blog, method: :delete,
                data: { confirm: "本当に削除しますか？" } %>
    <% end %>
  <% end %>
  <li>
    by <%= link_to blog.member_id.nickname, [blog.member_id, :blogs] %>
  </li>
  <li>
    <%= blog.created_at.strftime("%Y/%m/%d %H:%M") %>
  </li>
</ul>